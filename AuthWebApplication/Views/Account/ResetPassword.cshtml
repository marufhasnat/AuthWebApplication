@model ForgetPasswordVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-5 mt-5 border border-4 p-4 rounded">
        <form method="post" asp-action="ResetPassword">
            <!-- Heading -->
            <h3 class="text-center text-muted mb-2" style="font-size:20px;">Reset Password</h3>
            <hr />

            <!-- Hidden Fields -->
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Token" />

            <!-- Password input -->
            <div data-mdb-input-init class="form-outline mb-30">
                <input type="password" class="form-control @(ViewData.ModelState["Password"]?.Errors.Count > 0 ? "is-invalid" : "")" asp-for="Password" />
                <label class="form-label" asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="invalid-feedback"></span>
            </div>

            <!-- Repeat Password input -->
            <div data-mdb-input-init class="form-outline mb-30">
                <input type="password" class="form-control @(ViewData.ModelState["ConfirmPassword"]?.Errors.Count > 0 ? "is-invalid" : "")" asp-for="ConfirmPassword" />
                <label class="form-label" asp-for="ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword" class="invalid-feedback"></span>
            </div>

            <!-- Action Buttons -->
            <div class="row">
                <div class="col-md-6 d-grid">
                    <button type="submit" class="btn btn-primary btn-block">Reset Password</button>
                </div>
                <div class="col-md-6 d-grid">
                    <a asp-action="Login" asp-controller="Account" class="btn btn-warning btn-block text-light">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>
