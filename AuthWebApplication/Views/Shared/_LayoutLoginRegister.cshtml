<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AuthWebApplication</title>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/8.1.0/mdb.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <div class="d-flex justify-content-center align-items-center mt-5">
        <div class="container mt-5" style="max-width: 500px;">
            <div class="card login-logout-card">
                <!-- Pills navs -->
                <ul class="nav nav-pills nav-justified mb-0" id="ex1" role="tablist" style="border-radius: 5px 5px 0 0;">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link rounded-0 fw-bold @(ViewData["ActiveTab"] as string == "Login" ? "active bg-primary text-white" : "text-dark")"
                           asp-action="Login" asp-controller="Account" role="tab"
                           aria-controls="pills-login" aria-selected="true" style="border-right: 1px solid #ddd;">
                            Login
                        </a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link rounded-0 fw-bold @(ViewData["ActiveTab"] as string == "Register" ? "active bg-primary text-white" : "text-dark")"
                           asp-action="Register" asp-controller="Account" role="tab"
                           aria-controls="pills-register" aria-selected="false">
                            Register
                        </a>
                    </li>
                </ul>
                <!-- Pills content -->
                <div class="p-4">
                    @RenderBody()
                </div>
                <!-- Pills content -->
            </div>
        </div>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script><!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/8.1.0/mdb.umd.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
